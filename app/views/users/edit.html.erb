<%= render 'layouts/notifications' %>


<h1>User info</h1>

<%= form_for(@user) do |f| %>
<div class="field">
    <%= f.label :name%>
    <%= f.text_field :name, autofocus: true %>
</div>

<div class="field">
    <%= f.label :image%><br>
    <%= f.attachment_field :profile_image %>
</div>

<div class="field">
    <%= f.label :introduction%>
    <%= f.text_area :introduction%>
</div>
	<%= f.submit "Update User"%>

<% end %>

